{
  "$schema": "https://biomejs.dev/schemas/2.2.4/schema.json",
  "extends": ["./libs/biome/biome.json"],
  "files": {
    "includes": [
      "**",
      "!**/examples",
      "!**/docs",
      "!**/temp",
      "!**/tmp",
      "!**/temporary",
      "!**/demos",
      "!**/samples",
      "!**/playground",
      "!**/test-data",
      "!**/fixtures"
    ]
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "correctness": {
        "noUnusedVariables": "error",
        "noUnusedFunctionParameters": "warn"
      },
      "style": {
        "noNonNullAssertion": "warn",
        "useConst": "error"
      },
      "suspicious": {
        "noExplicitAny": "warn",
        "noArrayIndexKey": "warn"
      }
    }
  }
}
