{
  "name": "@boyscout/source",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "format": "biome format .",
    "format:fix": "biome format --write .",
    "check": "biome check .",
    "check:fix": "biome check --write .",
    "commit": "cz",
    "prepare": "husky",
    "release": "nx release",
    "release:dry-run": "nx release --dry-run",
    "version": "nx release version",
    "changelog": "nx release changelog",
    "publish": "nx release publish",
    "version:project": "nx release version --projects",
    "changelog:project": "nx release changelog --projects",
    "version:all": "nx release version --projects=*",
    "changelog:all": "nx release changelog --projects=*"
  },
  "private": false,
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.4",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@nx/js": "20.8.2",
    "@swc-node/register": "~1.9.1",
    "@swc/core": "~1.5.7",
    "@swc/helpers": "~0.5.11",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^9.1.7",
    "nx": "20.8.2",
    "tslib": "^2.3.0",
    "typescript": "~5.7.2"
  }
}
